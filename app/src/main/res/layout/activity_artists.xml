<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hell.mymusicstructure.ArtistsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:background="@color/colorBack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.23"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/homeImage"
                    style="@style/Menu"
                    android:src="@drawable/home" />

                <ImageView
                    android:id="@+id/searchImage"
                    style="@style/Menu"
                    android:src="@drawable/search" />

                <ImageView
                    android:id="@+id/playImage"
                    style="@style/Menu"
                    android:src="@drawable/playlist" />

                <ImageView
                    android:id="@+id/artImage"
                    style="@style/Menu"
                    android:src="@drawable/artists" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homeText"
                    style="@style/MenuT"
                    android:text="Home"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/searchText"
                    style="@style/MenuT"
                    android:text="Search"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/playText"
                    style="@style/MenuT"
                    android:text="Playlists"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/artText"
                    style="@style/MenuT"
                    android:text="Artists"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:paddingTop="16dp"
                    android:text="Albums of recently heared Artists"
                    android:textColor="@color/colorIcon"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F01111"
                    android:padding="16dp"
                    android:text="Different albums of the artists you click on them so you
see th tracks the have."
                    android:textColor="#E2E9FF" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/halou" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sap" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ruby" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="16dp"
                        android:text="Current song playing"
                        android:textColor="@color/colorIcon"
                        android:textSize="25sp" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="?android:progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_weight="0.07"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="50" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/volume"
                            style="@style/Buttons"
                            android:layout_height="match_parent"
                            android:src="@drawable/volume" />

                        <ImageView
                            android:id="@+id/left"
                            style="@style/Buttons"
                            android:src="@drawable/left" />

                        <ImageView
                            android:id="@+id/play"
                            style="@style/Buttons"
                            android:src="@drawable/play" />

                        <ImageView
                            android:id="@+id/right"
                            style="@style/Buttons"
                            android:src="@drawable/right" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>